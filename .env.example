# ==============================================
# SaFar API - Environment Variables Template
# ==============================================
# Copy this file to .env and fill in your values
# For Railway: Set these in the Railway Dashboard -> Variables

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Groq Configuration (alternative LLM)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant

# Local Ollama (optional fallback - not available on Railway)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=phi3:mini

# Application Settings
EMBEDDING_MODEL=all-MiniLM-L6-v2
DEFAULT_LANGUAGE=ru
DEBUG=false

# LLM Priority: false = cloud (OpenAI/Groq), true = local (Ollama)
PREFER_LOCAL_LLM=false

# Railway automatically provides:
# PORT - The port your app should listen on
